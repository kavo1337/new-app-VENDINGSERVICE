<Window x:Class="app.CLIENT.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app.CLIENT"
        mc:Ignorable="d"
        Title="Главная"
        Height="720"
        Width="1100"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DataTemplate x:Key="EfficiencyTemplate">
            <StackPanel>
                <TextBlock Text="Процент работающих" FontWeight="SemiBold"/>
                <ProgressBar Height="18" Maximum="100" Value="{Binding EfficiencyPercent}" Margin="0,6,0,0"/>
                <TextBlock Text="{Binding EfficiencyPercent, StringFormat={}{0}%}" Margin="0,6,0,0"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="NetworkStateTemplate">
            <StackPanel>
                <TextBlock Text="Статусы" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <Button Content="Работает" Tag="Working" Click="NetworkStatus_Click" Margin="0,0,6,0"/>
                    <Button Content="Не работает" Tag="Offline" Click="NetworkStatus_Click" Margin="0,0,6,0"/>
                    <Button Content="На обслуживании" Tag="Service" Click="NetworkStatus_Click"/>
                </StackPanel>
                <TextBlock Text="{Binding SelectedStatusText}" Margin="0,6,0,0"/>
                <StackPanel Margin="0,6,0,0">
                    <TextBlock Text="{Binding WorkingCount, StringFormat=Работает: {0}}"/>
                    <TextBlock Text="{Binding OfflineCount, StringFormat=Не работает: {0}}"/>
                    <TextBlock Text="{Binding ServiceCount, StringFormat=На обслуживании: {0}}"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="SummaryTemplate">
            <UniformGrid Columns="3" Margin="0,6,0,0">
                <StackPanel>
                    <TextBlock Text="Продажи" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding SalesTotal, StringFormat={}{0:N0}}"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Инкассация" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CashTotal, StringFormat={}{0:N0}}"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Обслуживание" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding MaintenanceTotal, StringFormat={}{0}}"/>
                </StackPanel>
            </UniformGrid>
        </DataTemplate>

        <DataTemplate x:Key="SalesTemplate">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                    <Button Content="По сумме" Click="SalesFilterSum_Click" Margin="0,0,6,0"/>
                    <Button Content="По количеству" Click="SalesFilterCount_Click"/>
                </StackPanel>
                <ItemsControl ItemsSource="{Binding ChartItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4,0,4,0" VerticalAlignment="Bottom">
                                <TextBlock Text="{Binding ValueText}" FontSize="10" HorizontalAlignment="Center"/>
                                <Border Height="{Binding BarHeight}" Width="16" Background="SteelBlue" CornerRadius="2"/>
                                <TextBlock Text="{Binding Day}" FontSize="10" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="NewsTemplate">
            <ItemsControl ItemsSource="{Binding NewsItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,0,0,6"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </DataTemplate>

        <local:TileTemplateSelector x:Key="TileTemplateSelector"
                                    EfficiencyTemplate="{StaticResource EfficiencyTemplate}"
                                    NetworkStateTemplate="{StaticResource NetworkStateTemplate}"
                                    SummaryTemplate="{StaticResource SummaryTemplate}"
                                    SalesTemplate="{StaticResource SalesTemplate}"
                                    NewsTemplate="{StaticResource NewsTemplate}"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#F3F3F3">
            <DockPanel Margin="8">
                <Button Content="Menu" Click="ToggleSidebar_Click" Height="32" DockPanel.Dock="Top"/>

                <StackPanel Margin="0,12,0,0">
                    <TextBlock x:Name="MenuHeader" Text="Меню" FontWeight="Bold" Margin="0,0,0,8"/>

                    <Button Content="Главная" HorizontalContentAlignment="Left" Margin="0,0,0,4"/>
                    <Button Content="Монитор ТА" HorizontalContentAlignment="Left" Margin="0,0,0,4"/>
                    <Button Content="Детальные отчеты" HorizontalContentAlignment="Left" Margin="0,0,0,4"/>
                    <Button Content="Учет ТМЦ" HorizontalContentAlignment="Left" Margin="0,0,0,8"/>

                    <Expander x:Name="AdminExpander" Header="Администрирование" IsExpanded="True">
                        <StackPanel Margin="8,4,0,0">
                            <Button Content="Торговые автоматы" HorizontalContentAlignment="Left" Margin="0,0,0,4"/>
                            <Button Content="Компании" HorizontalContentAlignment="Left" Margin="0,0,0,4"/>
                            <Button Content="Пользователи" HorizontalContentAlignment="Left" Margin="0,0,0,4"/>
                            <Button Content="Модемы" HorizontalContentAlignment="Left" Margin="0,0,0,4"/>
                            <Button Content="Дополнительные" HorizontalContentAlignment="Left"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="16">
                <DockPanel>
                    <TextBlock Text="Главная" FontSize="20" FontWeight="Bold" DockPanel.Dock="Left"/>

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <Border x:Name="PhotoPlaceholder" Width="36" Height="36" Background="#D9D9D9" CornerRadius="18" Margin="0,0,8,0">
                            <TextBlock x:Name="UserInitialsText" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Image x:Name="UserPhoto" Width="36" Height="36" Margin="0,0,8,0" Visibility="Collapsed"/>
                        <StackPanel>
                            <TextBlock x:Name="UserNameText" FontWeight="SemiBold"/>
                            <TextBlock x:Name="UserRoleText" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                        <Button Content="Профиль" Margin="8,0,0,0" Click="ProfileButton_Click">
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Профиль"/>
                                    <MenuItem Header="Выйти"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>

            <ListBox Grid.Row="1"
                     x:Name="TilesList"
                     ItemsSource="{Binding Tiles}"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     AllowDrop="True"
                     PreviewMouseLeftButtonDown="TilesList_PreviewMouseLeftButtonDown"
                     PreviewMouseMove="TilesList_PreviewMouseMove"
                     Drop="TilesList_Drop">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="8"/>
                        <Setter Property="Margin" Value="4"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Padding="12" Width="300" Height="220">
                            <DockPanel>
                                <DockPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" DockPanel.Dock="Left"/>
                                    <Button Content="Скрыть" DockPanel.Dock="Right" Click="HideTile_Click"/>
                                </DockPanel>
                                <ContentPresenter Content="{Binding}" ContentTemplateSelector="{StaticResource TileTemplateSelector}"/>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Window>
