<Page x:Class="app.CLIENT.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{StaticResource PageBackground}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Торговые автоматы" FontSize="18" FontWeight="SemiBold"/>
            <TextBlock Text="Администрирование / Торговые автоматы" FontSize="12" Foreground="Gray"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" BorderBrush="#E3E3E3" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,12">
            <StackPanel>
                <WrapPanel VerticalAlignment="Center">
                    <TextBlock Text="Поиск" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox x:Name="SearchBox" Width="180" Height="28" Margin="0,0,12,0"/>

                    <TextBlock Text="Строк" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <ComboBox x:Name="PageSizeBox" Width="80" Height="28" SelectionChanged="PageSizeBox_SelectionChanged">
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="20" IsSelected="True"/>
                        <ComboBoxItem Content="50"/>
                    </ComboBox>

                    <CheckBox x:Name="GroupByCompany" Content="Группировать по франчайзи" Margin="12,0,0,0" Checked="GroupByCompany_Checked" Unchecked="GroupByCompany_Checked"/>
                </WrapPanel>

                <WrapPanel Margin="0,8,0,0">
                    <Button Content="Таблица" Height="28" Margin="0,0,6,0" Click="TableView_Click"/>
                    <Button Content="Плитка" Height="28" Margin="0,0,12,0" Click="TileView_Click"/>

                    <Button Content="Обновить" Height="28" Margin="0,0,6,0" Click="Refresh_Click"/>
                    <Button Content="Добавить" Height="28" Margin="0,0,12,0" Click="Add_Click"/>

                    <Button Content="CSV" Height="28" Margin="0,0,6,0" Click="ExportCsv_Click"/>
                    <Button Content="HTML" Height="28" Margin="0,0,6,0" Click="ExportHtml_Click"/>
                    <Button Content="PDF" Height="28" Click="ExportPdf_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="White" BorderBrush="#E3E3E3" BorderThickness="1" CornerRadius="6" Padding="6">
            <Grid>
                <DataGrid x:Name="MachinesGrid"
                          ItemsSource="{Binding Machines}"
                          AutoGenerateColumns="False"
                          AlternationCount="2"
                          HeadersVisibility="Column"
                          CanUserSortColumns="True"
                          IsReadOnly="True">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="AlternationIndex" Value="1">
                                    <Setter Property="Background" Value="#F7F7F7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="Модель" Binding="{Binding Model}" Width="160"/>
                        <DataGridTextColumn Header="Компания" Binding="{Binding Company}" Width="160"/>
                        <DataGridTextColumn Header="Модем" Binding="{Binding ModemId}" Width="80"/>
                        <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="180"/>
                        <DataGridTextColumn Header="Место" Binding="{Binding Place}" Width="140"/>
                        <DataGridTextColumn Header="В работе с" Binding="{Binding WorkingSince, StringFormat=dd.MM.yyyy}" Width="120"/>
                        <DataGridTemplateColumn Header="Действия" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Width="28" Height="28" Margin="0,0,4,0" Click="Edit_Click" ToolTip="Редактировать">
                                            <Image Source="/app.CLIENT;component/Assets/Icons/pencil.png" Width="14" Height="14"/>
                                        </Button>
                                        <Button Width="28" Height="28" Margin="0,0,4,0" Click="Delete_Click" ToolTip="Удалить">
                                            <Image Source="/app.CLIENT;component/Assets/Icons/trash.png" Width="14" Height="14"/>
                                        </Button>
                                        <Button Width="28" Height="28" Click="Unlink_Click" ToolTip="Отвязать модем">
                                            <Image Source="/app.CLIENT;component/Assets/Icons/unlink.png" Width="14" Height="14"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <ItemsControl x:Name="TilesPanel" ItemsSource="{Binding Machines}" Visibility="Collapsed">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Padding="10" Margin="6" Width="240" Background="White">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Model}"/>
                                    <TextBlock Text="{Binding Company}" Foreground="Gray"/>
                                    <TextBlock Text="{Binding Address}" TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <Button Width="28" Height="28" Margin="0,0,4,0" Click="Edit_Click" ToolTip="Редактировать">
                                            <Image Source="/app.CLIENT;component/Assets/Icons/pencil.png" Width="14" Height="14"/>
                                        </Button>
                                        <Button Width="28" Height="28" Margin="0,0,4,0" Click="Delete_Click" ToolTip="Удалить">
                                            <Image Source="/app.CLIENT;component/Assets/Icons/trash.png" Width="14" Height="14"/>
                                        </Button>
                                        <Button Width="28" Height="28" Click="Unlink_Click" ToolTip="Отвязать модем">
                                            <Image Source="/app.CLIENT;component/Assets/Icons/unlink.png" Width="14" Height="14"/>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <DockPanel Grid.Row="3" Margin="0,12,0,0">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Content="&lt;" Width="30" Click="Prev_Click"/>
                <TextBlock x:Name="PageInfo" Margin="8,0" VerticalAlignment="Center"/>
                <Button Content="&gt;" Width="30" Click="Next_Click"/>
            </StackPanel>
            <TextBlock x:Name="TotalInfo" DockPanel.Dock="Right" VerticalAlignment="Center"/>
        </DockPanel>
    </Grid>
</Page>
